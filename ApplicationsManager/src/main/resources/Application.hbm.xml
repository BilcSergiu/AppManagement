<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "com.example.ApplicationsManager.model.Application" table = "APPLICATION">

        <meta attribute = "class-description">
            This class contains the Applications detail.
        </meta>

        <id name = "id" type = "int" column = "application_id">
            <generator class="native"/>
        </id>

        <property name = "name" column = "name" type = "string"/>
        <property name = "technologies" column = "technologies" type = "string"/>
        <property name = "version" column = "version" type = "string"/>

    </class>
</hibernate-mapping>